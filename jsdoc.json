{
    "source": {
        "include": ["src"], 
        "exclude": ["node_modules", "docs", "test"],
        "includePattern": ".+\\.js(doc|x)?$",  
        "excludePattern": "(node_modules|\\.git)"  
    },
    "opts": {
        "destination": "./docs/html/",  
        "recurse": true  
    },
    "plugins": [
        "plugins/markdown"  
    ]
}